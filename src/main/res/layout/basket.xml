<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="수강신청"
            android:background="@color/lilpa_700"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:id="@+id/basketToSugang"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="삭제"
            android:background="@color/lilpa_700"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:id="@+id/deleteBasket"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/lilpa_700">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1학년"
                android:id="@+id/basketGrade"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의 제목"
                android:id="@+id/basketTitle"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교수 이름"
                android:id="@+id/basketProfessor"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3학점"
                android:id="@+id/basketCredit"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1분반"
                android:id="@+id/basketDivide"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이수구분"
                android:id="@+id/basketClass"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 수강 인원"
                android:id="@+id/basketAvail"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의 제한 인원"
                android:id="@+id/basketPersonal"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="#f92a3f"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의 시간대"
                android:id="@+id/basketTime"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textColor="@color/lilpa_dark"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>